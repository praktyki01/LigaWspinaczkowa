@model LigaWspinaczkowa.Models.Stage

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Stage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <p>Podając datę od dobrze jest podać godznię od północy 00:00</p>
                <label asp-for="DataFrom" class="control-label"></label>
                <input asp-for="DataFrom" class="form-control" />
                <span asp-validation-for="DataFrom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Podają datę do dobrze jest podać godznię do północy 23:59</p>
                <label asp-for="DataTo" class="control-label"></label>
                <input asp-for="DataTo" class="form-control" />
                <span asp-validation-for="DataTo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Tu wpisz max punkty za drogi ze średnikiem np. 56.5;45.3;46</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
