@model IEnumerable<LigaWspinaczkowa.Models.Stage>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista rozdań</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj nowe rozdanie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataFrom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataTo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataFrom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataTo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>  
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
